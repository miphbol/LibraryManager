@model List<LibManagerMVC.Models.Book.BookIndexViewModel>
@{
    ViewData["Title"] = "Book Index";
}

<div class="d-flex flex-wrap justify-content-between align-items-baseline">
    <h1 class="display-4">All Books</h1>
    <a asp-controller="Book" asp-action="Create" class="btn btn-sm btn-success">Add a Book</a>
</div>

@if (TempData["ErrorMsg"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>ERROR:</strong> @TempData["ErrorMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped border">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>AuthorID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.AuthorID</td>
            
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>