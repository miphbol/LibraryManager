@model List<LibManagerMVC.Models.Author.AuthorIndexViewModel>
@{
    ViewData["Title"] = "Author Index";
}

<div class="d-flex flex-wrap justify-content-between align-items-baseline">
    <h1 class="display-4">All Authors</h1>
    <a asp-controller="Product" asp-action="Create" class="btn btn-sm btn-success">Add an Author</a>
</div>

@if (TempData["ErrorMsg"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>ERROR:</strong> @TempData["ErrorMsg"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped border">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.Name</td>
            
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@author.Id" class="btn btn-sm btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@author.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@author.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>